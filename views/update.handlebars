{{#each posts as |post|}}
<div class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">Update Post</h2>
    <form class="form new-post-form">
      <div class="form-group">
        <label for="title">Title:</label>
        <h4>{{title}}</h4>
      </div>
      <div class="form-group">
        <label for="update-content">Insert Content:</label>
        <textarea rows="5" cols="50" id="update-content" placeholder="Enter Content"></textarea>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="update-post">Update Post</button>
      </div>
    </form>
  </div>
</div>
{{/each}}

<script src="../../assets/js/update.js"></script>